<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/adminProducts.css" type="text/css" rel="stylesheet">
    <link rel="stylesheet" href="/css/footer.css">
    <link rel="stylesheet" href="/css/header.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Inconsolata:wght@200&family=Inter:wght@300&family=Poppins:ital,wght@1,100&display=swap"
        rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400&display=swap" rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="/img/logo.png">
    <title>List Of Products</title>
</head>

<body>

    <%- include("../partials/header"); %>

        <main>
            <div>
                <h1 class="title">Productos en venta</h1>
            </div>

            <div>
                <a href="/admin/create"><i class="fa-solid fa-circle-plus"></i>Crear</a>
            </div>
            <div>
                <table>
                    <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>Ver</th>
                        <th>Editar</th>
                        <th>Eliminar</th>
                    </tr>

                    <tbody>
                        <% productos.forEach( producto=> { %>
                            <tr>

                                <td>
                                    <%= producto.id %>
                                </td>
                                <td>
                                    <%= producto.name %>
                                </td>
                                <td><a href="/admin/detail/<%= producto.id %>"><i class="fa-solid fa-eye"></i></a></td>
                                <td><a href="/admin/edit/<%= producto.id %>"><i class="fa-solid fa-pencil"></i></a></td>

                                <td>
                                    <form action="/admin/<%= producto.id %>?_method=DELETE" method="post"><button
                                            type="submit" class="btn-delete"><i
                                                class="fa-solid fa-trash-can"></i></button></form>
                                </td>

                                <!-- <td><a href="/admin/delete/<%= producto.id %>">Eliminar</ion-icon></a></td> -->
                                <% }) %>
                            </tr>
                    </tbody>


                </table>
            </div>
        </main>


</body>

</html>